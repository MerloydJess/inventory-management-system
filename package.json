{
  "name": "inventory-system",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "description": "An Inventory Management System for BTS",
  "author": "BTS Inventory",
  "main": "main.js",
  "scripts": {
    "start": "set BROWSER=none && react-scripts start",
    "start-server": "node -r dotenv/config server.js dotenv_config_path=.env.server",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "concurrently \"npm run start-server\" \"npm run start\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "electron-is-packaged": "^1.0.2",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "json2csv": "^6.0.0-alpha.2",
    "pdfkit": "^0.16.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-modal": "3.16.1",
    "react-router-dom": "6.20.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.bts.inventory",
    "productName": "BTS Inventory",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "server.js",
      "resources/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "app/resources/"
      }
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
      
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}