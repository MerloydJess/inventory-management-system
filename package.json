{
  "name": "inventory-system",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "description": "An Inventory Management System for BTS",
  "author": "BTS Inventory",
  "main": "main.js",
  "scripts": {
    "start": "set BROWSER=none && react-scripts start",
    "start-server": "node -r dotenv/config server.js dotenv_config_path=.env.server",
    "build": "set REACT_APP_API_URL=http://localhost:5001&& react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "concurrently \"npm run start-server\" \"npm run start\"",
    "clean": "rimraf dist build node_modules/.cache",
    "prebuild": "npm run clean",
    "postbuild": "node copy-node.js && node -e \"const fs=require('fs'),path=require('path');const src='resources',dest='build/resources';if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});if(fs.existsSync(src)){const files=fs.readdirSync(src);files.forEach(f=>fs.existsSync(path.join(src,f))&&fs.copyFileSync(path.join(src,f),path.join(dest,f)))}\"",
    "electron-build": "npm run build && electron-builder",
    "build-production": "set GENERATE_SOURCEMAP=false&& set REACT_APP_API_URL=http://localhost:5001&& npm run build && electron-builder --win --x64 --publish=never",
    "dist": "npm run build-production"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "electron-is-packaged": "^1.0.2",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "json2csv": "^6.0.0-alpha.2",
    "pdfkit": "^0.16.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-modal": "3.16.1",
    "react-router-dom": "6.20.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7",
    "web-vitals": "^2.1.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.0.1",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.bts.inventory",
    "productName": "BTS Inventory",
    "extends": null,
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "build/**/*",
      "main.js",
      "server.js",
      "package.json",
      "resources/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/.vite",
      "!node_modules/@electron",
      "!**/*.{md,ts,map}"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "server.js",
      "resources/**/*",
      "build/node.exe",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/favicon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "deleteAppDataOnUninstall": false,
      "installerIcon": "public/favicon.ico",
      "uninstallerIcon": "public/favicon.ico"
    },
    "compression": "normal",
    "removePackageScripts": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
