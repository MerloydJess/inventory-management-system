{
  "name": "inventory-system",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "description": "An Inventory Management System for BTS",
  "author": "BTS Inventory",
  "main": "main.js",
  "scripts": {
    "start": "react-scripts start",
    "start-server": "node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "concurrently \"npm run start-server\" \"npm run electron-dev\"",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "build": "^0.1.4",
    "call-bind": "^1.0.8",
    "call-bind-apply-helpers": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "electron-is-packaged": "^1.0.2",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "fs": "^0.0.1-security",
    "function-bind": "^1.1.2",
    "get-intrinsic": "^1.3.0",
    "has": "^1.0.4",
    "has-symbols": "^1.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "pdfkit": "^0.16.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "sqlite3": "^5.1.7",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.bts.inventory",
    "productName": "BTS Inventory",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "server.js"
    ],
    "extraResources": [
      {
        "from": "node_modules/function-bind",
        "to": "node_modules/function-bind"
      },
      {
        "from": "node_modules/call-bind-apply-helpers",
        "to": "node_modules/call-bind-apply-helpers"
      },
      {
        "from": "node_modules/call-bind",
        "to": "node_modules/call-bind"
      },
      {
        "from": "node_modules/has",
        "to": "node_modules/has"
      },
      {
        "from": "node_modules/has-symbols",
        "to": "node_modules/has-symbols"
      },
      {
        "from": "node_modules/get-intrinsic",
        "to": "node_modules/get-intrinsic"
      },
      {
        "from": "resources/database.sqlite",
        "to": "database.sqlite"
      }
    ],
    "asar": false,
    "win": {
      "target": "nsis"
    },
    "extraMetadata": {
      "main": "main.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
