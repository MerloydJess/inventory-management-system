{
  "name": "inventory-system",
  "version": "1.0.0",
  "private": true,
  "homepage": "./",
  "description": "An Inventory Management System for BTS",
  "author": "BTS Inventory",
  "main": "main.js",
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "call-bind-apply-helpers": "^1.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "fs": "^0.0.1-security",
    "json2csv": "^6.0.0-alpha.2",
    "pdfkit": "^0.16.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "sqlite3": "^5.1.7",
    "wait-on": "^8.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "start-server": "node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "concurrently \"npm run start-server\" \"npm run electron-dev\"",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.bts.inventory",
    "productName": "BTS Inventory",
    "copyright": "Copyright Â© 2024 BTS Inventory",
    "directories": {
      "output": "dist"
    },
    "files": [
      "node_modules/**/*",
      "build/**/*",
      "main.js",
      "server.js",
      "resources/database.sqlite"
    ],

    "extraResources": [
      { "from": "./main.js",
       "to": "app/main.js" },
      {
        "from": "./server.js",
        "to": "app/server.js"
      },
      {
        "from": "resources/database.sqlite",
        "to": "database.sqlite"
      },
      {
        "from": "node_modules/call-bind-apply-helpers",
        "to": "node_modules/call-bind-apply-helpers"
      },
      {
        "from": "node_modules",
        "to": "app/node_modules"
      }
    ],
    "asar": false,
    "npmRebuild": true,

    "win": {
      "target": "nsis"
    },
    "extraMetadata": {
      "main": "main.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
